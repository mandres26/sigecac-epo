<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
    <converter>
        <converter-for-class>edu.upn.sigecac.seg.be.Grupo</converter-for-class>
        <converter-class>edu.upn.sigecac.seg.beans.GrupoConverter</converter-class>
    </converter>

    <converter>
        <converter-for-class>edu.upn.sigecac.seg.be.Rol</converter-for-class>
        <converter-class>edu.upn.sigecac.seg.beans.RolConverter</converter-class>
    </converter>

    <converter>
        <converter-for-class>edu.upn.sigecac.seg.be.Usuario</converter-for-class>
        <converter-class>edu.upn.sigecac.seg.beans.UsuarioConverter</converter-class>
    </converter>

    <validator>
        <validator-id>emailValidator</validator-id>
        <validator-class>edu.upn.sigecac.seg.validators.EmailValidator</validator-class>
    </validator>
    <validator>
        <validator-id>textoValidator</validator-id>
        <validator-class>edu.upn.sigecac.seg.validators.TextoValidator</validator-class>
    </validator>
    <managed-bean>
        <managed-bean-name>GrupoController</managed-bean-name>
        <managed-bean-class>edu.upn.sigecac.seg.beans.GrupoController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>RolController</managed-bean-name>
        <managed-bean-class>edu.upn.sigecac.seg.beans.RolController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>UsuarioController</managed-bean-name>
        <managed-bean-class>edu.upn.sigecac.seg.beans.UsuarioController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/rol/listar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>nuevo_rol</from-outcome>
            <to-view-id>/rol/nuevo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/rol/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>mostrar_rol</from-outcome>
            <to-view-id>/rol/mostrar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editar_rol</from-outcome>
            <to-view-id>/rol/editar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/rol/nuevo.jsp</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/rol/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/rol/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/rol/failed.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/rol/editar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/rol/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/rol/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/rol/listar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/rol/mostrar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/rol/listar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/usuario/listar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>mostrar_usuario</from-outcome>
            <to-view-id>/usuario/mostrar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/usuario/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevo_usuario</from-outcome>
            <to-view-id>/usuario/nuevo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editar_usuario</from-outcome>
            <to-view-id>/usuario/editar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/usuario/mostrar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/usuario/listar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/usuario/nuevo.jsp</from-view-id>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/usuario/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevoGrupo</from-outcome>
            <to-view-id>/usuario/addgrupo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/usuario/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/usuario/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>listarPersonas</from-outcome>
            <to-view-id>/usuario/listarpersona.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/usuario/editar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/usuario/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/usuario/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/usuario/listar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/usuario/addgrupo.jsp</from-view-id>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/usuario/nuevo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevo_usuario</from-outcome>
            <to-view-id>/usuario/nuevo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/usuario/editar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editar_usuario</from-outcome>
            <to-view-id>/usuario/editar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/grupo/listar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>mostrar_grupo</from-outcome>
            <to-view-id>/grupo/mostrar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevo_grupo</from-outcome>
            <to-view-id>/grupo/nuevo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/grupo/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editar_grupo</from-outcome>
            <to-view-id>/grupo/editar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/grupo/mostrar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/grupo/listar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/grupo/nuevo.jsp</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/grupo/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/grupo/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/grupo/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevoRol</from-outcome>
            <to-view-id>/grupo/addrol.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/grupo/editar.jsp</from-view-id>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/grupo/failed.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/grupo/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/grupo/listar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevoRol</from-outcome>
            <to-view-id>/grupo/addrol.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/grupo/addrol.jsp</from-view-id>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/grupo/nuevo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>nuevo_grupo</from-outcome>
            <to-view-id>/grupo/nuevo.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>retornar</from-outcome>
            <to-view-id>/grupo/editar.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editar_grupo</from-outcome>
            <to-view-id>/grupo/editar.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/usuario/listarpersona.jsp</from-view-id>
        <navigation-case>
            <from-outcome>seleccionar</from-outcome>
            <to-view-id>/usuario/nuevo.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
